{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "typeRoots": ["./types"],
        "strict": true,
        "importsNotUsedAsValues": "error"
    },
    "include": ["src/**/*"],
    "exclude": ["index.html", "node_modules", "dist"]
}